<div class="widget box-3 box-col-3 widget_{{ widget.id }}" data-order="{{ path('widget_order', {'widgetId': widget.id, 'order': '0'}) }}">
    <div class="card">
        <div class="card-body p-0">
            {# Action Button #}
            {% embed '@PdWidget/widgetAction.html.twig' %}
                {% block add_config %}
                    <a class="dropdown-item {{ widget.config.type is defined and widget.config.type in '1week' ? 'active' }}" href="{{ path('widget_config', { 'widgetId': widget.id, 'type': '1week' }) }}">{{ 'testing.1week'|trans }}</a>
                    <a class="dropdown-item {{ widget.config.type is defined and widget.config.type in '1month' ? 'active' }}" href="{{ path('widget_config', { 'widgetId': widget.id, 'type': '1month' }) }}">{{ 'testing.1month'|trans }}</a>
                    <a class="dropdown-item {{ widget.config.type is defined and widget.config.type in '3month' ? 'active' }}" href="{{ path('widget_config', { 'widgetId': widget.id, 'type': '3month'}) }}">{{ 'testing.3month'|trans }}</a>
                {% endblock %}
            {% endembed %}

            {# Canvas #}
            <canvas id="testing-canvas"></canvas>

            {# Load Data #}
            {% set widgetData = widget.data %}

            {# Draw Canvas #}
            <script>
              var ctx = document.getElementById('testing-canvas').getContext("2d");

              Chart.defaults.global.defaultFontFamily = 'Roboto';
              Chart.defaults.global.defaultFontSize = 14;

              var gradientFillRed = ctx.createLinearGradient(0, 300, 0, 150);
              gradientFillRed.addColorStop(0, 'rgba(255, 99, 132, .3)');
              gradientFillRed.addColorStop(1, 'rgba(255, 99, 132, .8)');

              var gradientFillBlue = ctx.createLinearGradient(0, 300, 0, 150);
              gradientFillBlue.addColorStop(0, 'rgba(54, 162, 235, .3)');
              gradientFillBlue.addColorStop(1, 'rgba(54, 162, 235, .8)');

              new Chart(ctx, {
                type: 'line',
                data: {
                  labels: {{ widgetData.column|raw }},
                  datasets: [{
                    label: '{{ "testing_statistics.task"|trans }}',
                    data: {{ widgetData.task|raw }},
                    backgroundColor: gradientFillBlue,
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1,
                    fill: true,
                  }, {
                    label: '{{ "testing_statistics.bug"|trans }}',
                    data: {{ widgetData.bug|raw }},
                    backgroundColor: gradientFillRed,
                    borderColor: 'red',
                    borderWidth: 1,
                    fill: true
                  }]
                },
                options: {
                  responsive: true,
                  maintainAspectRatio: false,
                  tooltips: {
                    mode: 'index',
                    intersect: false,
                    cornerRadius: 3,
                    backgroundColor: 'rgba(0,0,0,.8)',
                    titleMarginBottom:10,
                    bodySpacing: 6,
                    xPadding: 8,
                    yPadding: 8,
                    callbacks: {
                      title: function(tooltipItem) {
                        return '{{ "date"|trans }} ' + tooltipItem[0].xLabel;
                      }
                    }
                  },
                  layout: {
                    padding: {
                      left: 5,
                      right: 25,
                      top: 5,
                      bottom: 5
                    }
                  },
                  scales:{
                    yAxes: [{
                      gridLines: {
                        display: false,
                        drawTicks: false,
                      },
                      ticks: {
                        fontColor: 'rgba(0,0,0,0.5)',
                        fontStyle: 'bold',
                        beginAtZero: true,
                        maxTicksLimit: 5,
                        padding: 10
                      }
                    }],
                    xAxes: [{
                      gridLines: {
                        display: true,
                        tickMarkLength:0
                      },
                      ticks: {
                        padding: 15,
                        fontColor: 'rgba(0,0,0,.5)',
                        fontStyle: 'bold',
                      }
                    }]
                  }
                }
              });

            </script>
        </div>
    </div>
</div>
